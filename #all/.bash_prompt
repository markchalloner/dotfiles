PROMPT_USER_COLOR="$(tput bold)$(tput setaf 2)"
PROMPT_PREPOSITION_COLOR="$(tput bold)$(tput setaf 9)"
PROMPT_DEVICE_COLOR="$(tput bold)$(tput setaf 3)"
PROMPT_DIR_COLOR="$(tput bold)$(tput setaf 6)"
PROMPT_GIT_STATUS_COLOR="$(tput bold)$(tput setaf 5)"
PROMPT_GIT_PROGRESS_COLOR="$(tput bold)$(tput setaf 5)"
PROMPT_SYMBOL_COLOR="$(tput bold)"

PROMPT_SYNCED_SYMBOL=" $(tput setaf 2)["$'\xe2\x9c\x93'"]"
PROMPT_DIRTY_SYNCED_SYMBOL=" $(tput setaf 1)["$'\xe2\x9c\x97'"]"
PROMPT_UNPUSHED_SYMBOL=" $(tput setaf 2)["$'\xe2\x9c\x93\xe2\x87\xa1'"]"
PROMPT_DIRTY_UNPUSHED_SYMBOL=" $(tput setaf 1)["$'\xe2\x9c\x97\xe2\x87\xa1'"]"
PROMPT_UNPULLED_SYMBOL=" $(tput setaf 2)["$'\xe2\x9c\x93\xe2\x87\xa3'"]"
PROMPT_DIRTY_UNPULLED_SYMBOL=" $(tput setaf 1)["$'\xe2\x9c\x97\xe2\x87\xa3'"]"
PROMPT_UNPUSHED_UNPULLED_SYMBOL=" $(tput setaf 2)["$'\xe2\x9c\x93\xe2\x87\xa3\xe2\x87\xa1'"]"
PROMPT_DIRTY_UNPUSHED_UNPULLED_SYMBOL=" $(tput setaf 1)["$'\xe2\x9c\x97\xe2\x87\xa3\xe2\x87\xa1'"]"

# Load sexy-bash-prompt
if [ -n "${BASH_SOURCE}" ]
then
  FILE_SELF="${BASH_SOURCE}"
  while [ -L "${FILE_SELF}" ]
  do
    FILE_SELF=$(readlink ${FILE_SELF})
  done
  source "$(dirname ${FILE_SELF})/../deps/sexy-bash-prompt/.bash_prompt"
fi
