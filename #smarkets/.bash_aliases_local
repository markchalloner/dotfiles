# Ansible
alias ap="yubipiv && ansible-playbook -u \$SM_SSH_USER"

# CD
alias cdha="cd $HA_ROOT"
alias cdsad="cdscs && cd admin"
alias cdsan="cdst && cd ansible"
alias cdscs="cdssv && cd cscs"
alias cdsev="cdssv && cd events"
alias cdsmk="cdssv && cd marketing"
alias cdsin="cdssv && cd infrastructure"
alias cdsp="cdsm && cd packages"
alias cdsm="cd $SM_ROOT"
alias cdssv="cdsm && cd services"
alias cdst="cdsm && cd tools"
alias cdsta="cdst && cd ansible"

# Crane
alias cr="$HA_ROOT/crane/crane"
alias crd="cr dev:local"
alias crh="$HA_ROOT/crane/crane help | less"

# Docker
alias dockim="docker images"
alias dockimb="dockim | awk 'NR==1 || /'\$(gitb)'/ { print $1 }'"

# Environments
alias envans="[ -f "$SM_ROOT/tools/ansible/.ve/bin/activate" ] && source "$SM_ROOT/tools/ansible/.ve/bin/activate""
alias envk8s="[ -f "$SM_ROOT/tools/dev/setup/activate.sh" ] && source "$SM_ROOT/tools/dev/setup/activate.sh" > /dev/null 2>&1"

# Git
alias gitca="yubigpg && git commit -S --amend --no-edit"

# Helm
alias helmdel="func_helmdelete"
alias helmrun="func_helmupgrade"
alias helmrst="func_helmreset"

# Kubernetes
alias kubepod="kubectl get pods --all-namespaces"
alias kubelog="kubectl logs"
alias kubesh="func_kubeshell"

# Paver
alias pavdel="paver delete"
alias pavdev="pavdel && paver start_dev"
alias pavloc="pavdel && paver run_local"
alias pavreg="pavdel && paver run_registry"
alias pavsh="paver shell"

# Smarkets
alias smdel="(cdsm && tools/dev/delete_all.sh)"
alias smrun="(cdsm && tools/dev/run_minimal.sh)"

# SSH
alias sshdep="sshsm deployment"
alias sshsm="func_sshsmarkets"
