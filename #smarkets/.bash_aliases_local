func_alias kubehp='echo "----- /!\ PRODUCTION -----" >&2 ; sleep 3; KUBECONFIG=~/.kube/hanson-production kubectl'
func_alias kubehs='echo "----- (i) STAGING -----" >&2 ; KUBECONFIG=~/.kube/hanson-staging kubectl'

