<?xml version="1.0"?>
<root>
<!-- Place this file to ~/Library/Application Support/Karabiner/private.xml -->
  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_wait</name>
    <url type="shell">
      sleep 1
    </url>
  </vkopenurldef>
  <item>
    <name>Custom settings</name>
    <item>
      <name>Screensaver lock (Shift-Cmd-L)</name>
      <identifier>myconfig.screensaver_lock</identifier>
      <autogen>
        __KeyToKey__ 
        KeyCode::L, ModifierFlag::SHIFT_L | ModifierFlag::COMMAND_L,

        @begin
        KeyCode::VK_OPEN_URL_SHELL_wait,
        @end

        @begin
        KeyCode::VK_OPEN_URL_APP_ScreenSaverEngine
        @end
      </autogen>
    </item>
    <item>
      <name>Eject volumes (Shift-Cmd-E)</name>
      <identifier>myconfig.eject_volumes</identifier>
      <autogen>
        __KeyToKey__
        KeyCode::E, ModifierFlag::SHIFT_L | ModifierFlag::COMMAND_L,
        KeyCode::VK_OPEN_URL_SHELL_eject_volumes,
      </autogen>
    </item>
  </item>
</root>
